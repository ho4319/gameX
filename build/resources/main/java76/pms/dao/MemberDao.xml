<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="java76.pms.dao.MemberDao">
	
  <resultMap type="member" id="memberMap">
    <result column="auth"    property="author"/>
  </resultMap>
  
  
	<insert id="insert" parameterType="member">
		insert into member(email,pwd)
		values(#{email},sha1(#{password}))
	</insert>

	<select id="login" resultMap="memberMap" parameterType="map">
		select email, auth
		from member
		where email=#{email} and pwd=sha1(#{password})
	</select>
</mapper>





